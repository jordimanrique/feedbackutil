{% extends 'layout.html.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-12 pt-3 pb-3">
            <h4 class="">Create dimension</h4>
        </div>
    </div>
    <div class="row">
        <form action="{{ path('app_save_dimension') }}" method="post">
            <div class="mb-3 col-2">
                <label class="form-label" for="weight">Weight</label>
                <input class="form-control" type="text" value="{{ dimension ? dimension.weight : '' }}" name="weight" id="weight">
            </div>
            <div class="mb-3 col-10">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" value="{{ dimension ? dimension.name : '' }}" name="name" id="name">
            </div>

            <input class="btn btn-dark" type="submit" value="Guardar">
        </form>
    </div>
</div>
{% endblock %}